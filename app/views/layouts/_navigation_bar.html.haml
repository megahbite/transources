%header.navigation
  .menu-wrapper
    %a.logo{href: url_for(root_path)}
      = image_tag "logo.png", height: "60px"

    %p#js-mobile-menu.navigation-menu-button
      MENU
    .nav
      %ul#navigation-menu
        %li.nav-link.more
          = link_to t('resources.description'), resources_path
          %ul.submenu
            %li
              = link_to t('common.actions.search'), resources_path
            %li
              = link_to t('common.actions.new'), new_resource_path
        - if user_signed_in? && current_user.has_role?(:admin)
          %li.nav-link.more
            %a{href: '#'}
              = t('admin.admin')
            %ul.submenu
              %li
                = link_to t('comments.manage'), manage_comments_path
              %li
                = link_to t('resources.manage'), manage_resources_path
    .navigation-tools
      - if user_signed_in?
        = link_to t('sessions.logout'), destroy_user_session_path, method: :delete, class: "sign-up"
      - else
        = link_to t('sessions.login'), new_user_session_path, class: "sign-up"
      - if user_signed_in?
        = link_to t('registrations.edit'), edit_user_registration_path, class: "sign-up"
      - else
        = link_to t('registrations.new'), new_user_registration_path, class: "sign-up"
