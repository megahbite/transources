%html{xmlns: "http://www.w3.org/1999/xhtml"}
  %head
    %meta{content: "width=device-width", name: "viewport"}
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Unlock your account
    = stylesheet_link_tag "email.css", media: "all"
  %body
    %table.body-wrap
      %tr
        %td
        %td.container{width: "600"}
          .content
            %table.main{cellpadding: "0", cellspacing: "0", width: "100%"}
              %tr
                %td.content-wrap
                  %table{cellpadding: "0", cellspacing: "0", width: "100%"}
                    %tr
                      %td.content-block
                        Hello
                        = @resource.email
                    %tr
                      %td.content-block
                        Your account has been locked due to an excessive number of unsuccessful sign in attempts.
                    %tr
                      %td.content-block
                        Click the link below to unlock your account:
                    %tr
                      %td.content-block
                       = link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token), class: 'btn-primary'
                    %tr
                      %td.content-block
                        â€” The Trans Health Directory Team
            .footer
              %table{width: "100%"}
                %tr
                  %td.aligncenter.content-block
        %td
