#alert-template.alert{style: "display: none;"}
  %button.close{type: "button", data: {dismiss: "alert"}}
    &times;

.row
  .col-xs-12
    %h3 
      Search
    .row
      .col-xs-3
        = text_field_tag 'location', nil, placeholder: "Enter an address...", class: "form-control"
      .col-xs-3.input-group
        %span.input-group-addon Within
        = number_field_tag 'radius', 20, min: 1, class: "form-control"
        %span.input-group-addon km
      .col-xs-3
        = button_tag "Search", class: "btn btn-primary js-location-search", type: "button", data: { "loading-text" => "Searching..." }

.row
  .col-md-6.col-xs-12
    .results-map
  .col-md-6.col-xs-12
    %ul.results-list.unstyled
  
